<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miguebarrera.consorciotransportesandalucia.fragments.SaldoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_saldo_image"
            android:layout_width="190sp"
            android:layout_height="190sp"
            android:src="@drawable/nfc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120sp"/>

        <TextView
            android:id="@+id/fragment_saldo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TitleWelcomeScreenStyle"
            android:layout_below="@id/fragment_saldo_image"
            android:text="@string/proximamente_activity_saldo"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/fragment_saldo_sub_title"
            style="@style/SubTitleWelcomeScreenStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/fragment_saldo_title"
            android:text="@string/content_activity_saldo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="85sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="85sp"/>
    </RelativeLayout>

</FrameLayout>
